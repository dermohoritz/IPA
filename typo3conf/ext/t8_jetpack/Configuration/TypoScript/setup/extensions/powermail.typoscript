# powermail template paths
plugin.tx_powermail {
    view {
        templateRootPaths {
            100 = EXT:t8_jetpack/Resources/Private/Extensions/powermail/Templates/
            200 = EXT:t8_custom/Resources/Private/Extensions/powermail/Templates/
        }
        partialRootPaths {
            100 = EXT:t8_jetpack/Resources/Private/Extensions/powermail/Partials/
            200 = EXT:t8_custom/Resources/Private/Extensions/powermail/Partials/
        }
        layoutRootPaths {
            100 = EXT:t8_jetpack/Resources/Private/Extensions/powermail/Layouts/
            200 = EXT:t8_custom/Resources/Private/Extensions/powermail/Layouts/
        }
    }

    # add some classes
    settings.setup {
        styles {
            framework {
                labelClasses = form__label
                formClasses = content form
                #fieldAndLabelWrappingClasses = form__fieldwrap ## in Template
            } 
        }
    }
}